<h1>Unicorn Death Squad</h1>

<h3>Player Score Board</h3>

<ul>
  {{#each Players}}
  	<li>
  	    <p>ID: {{this.id}}</p>
		<p>Name: {{this.name}}</p>
        <p>Score: {{this.score}}</p>
  	</li>
  {{/each}}
</ul>

	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<ul class="list-group player-list">
					<li class="list-group-item new-item">
						<form id="player-form">
							<div class="container">
								<div class="row">
									<div class="col-10">
										<input class="new-item form-control" placeholder="Add a player" type="text" />
										<input class="new-item form-control" placeholder="Add a score" type="number" />
									</div>
									<div class="col-2">
										<button type="submit" class="btn btn-success">Add Player--only3Letters</button>
									</div>
								</div>
							</div>
						</form>
					</li>
					<span class="player-container">
					</span>
				</ul>
			</div>
		</div>
	</div>
	<!-- Custom Script -->
	

<form action="/" method="POST">
	<textarea type="text" name="wish"></textarea>

	<button type="submit">Submit</button>
</form>

<script src="js/view.js" type="text/javascript"></script>